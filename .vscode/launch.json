{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "netcoredbg ImazenShared.Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/tests/ImazenShared.Tests/bin/Debug/net8.0/ImazenShared.Tests.dll",
            "args": [],
            "cwd": "${workspaceFolder}/tests/ImazenShared.Tests",
            "console": "internalConsole",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "powershell",
                "pipeArgs": ["-Command"],
